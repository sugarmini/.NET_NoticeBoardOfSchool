@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登录/注册</title>
    <link rel="stylesheet" href="~/CSS/login.css">
    <script src="~/Scripts/login.js"></script>
</head>
<body>
    <div class="wrap"></div>
    <div class="form">
        <h1>
            <span id="login">登录</span>
            <span id="signup">注册</span>
        </h1>
        <form id="box1" action="/Login/Login" method="post">
            <div class="form-item">
                <label for="user">账号</label>
                <input type="text" name="email" value="@ViewBag.email" placeholder="请输入账号" class="input" id="user">
                <span class="error">账号不能为空</span>
            </div>
            <div class="form-item">
                <label for="psd">密码</label>
                <input type="password" name="password" value="@ViewBag.pwd" placeholder="请输入密码" class="input" id="psd">
                <span class="error">密码不能为空</span>
            </div>
            <div class="form-item manner">
                <input type="checkbox" name="remain" class="auto" id="auto">
                <label for="auto" id="check"  class="auto">记住密码</label>
                <a href="#" class="forget" target="_blank">忘记密码 </a>
            </div>
            <div class="form-item">
                <input type="submit" value="立即登录" class="input sub" id="enter">
            </div>
        </form>

        <form id="box2" action="/Login/Register" method="post">
            <div class="form-item">
                <label for="email">邮箱</label>
                <input type="text" name="email" placeholder="请输入邮箱" class="input" id="email">
                <span class="error">邮箱格式不正确</span>
            </div>
            <div class="form-item">
                <label for="pwd">密码</label>
                <input type="password" name="password" placeholder="请输入密码" class="input" id="pwd">
                <span class="error">密码只能在6位到20位之间</span>
            </div>
            <div class="form-item">
                <label for="repwd" class="repwd">确认密码</label>
                <input type="password" name="repwd" placeholder="请确认密码" class="input" id="repwd">
                <span class="error">两次输入密码不一致</span>
            </div>
            <div class="form-item">
                <input type="submit" value="立即注册" class="input sub" id="verify">
            </div>
        </form>
    </div>
</body>
</html>