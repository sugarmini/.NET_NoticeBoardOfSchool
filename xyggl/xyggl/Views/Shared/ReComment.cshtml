@model IEnumerable<xyggl.Models.Comment> 
<div class="clear"></div>
<div class="reply_content">
    <ul>
        @foreach (var item in Model)
        {
                
            <li class="people">
                <div class="item">
                    <img src="@Html.Action("Img", new { id = item.user_id })" alt="">
                    <form action="/Board/AddToCom" method="post">
                        <div class="word add-com">
                            <div class="w_content">
                                <span class="user">@Html.Action("UserName", new { id = item.user_id })</span>
                                @Html.Raw(item.content)
                            </div>
                            <div class="clear"></div>
                            <div>
                                <input type="hidden" name="content" class="recon"/>
                                <input type="hidden" name="forum_id" value="@item.forum_id" />
                                <input type="hidden" name="comment_id" value="@item.Id" />
                                <ul class="w_tail">
                                    <li><span class="reply">回复</span></li>
                                    <li><span>@item.time</span></li>                                           
                                </ul>
                            </div>
                        </div>
                    </form>                    
                </div>
                @Html.Action("ReComment", new { id = item.Id })
            </li>
               
        }
            
    </ul>
</div>

